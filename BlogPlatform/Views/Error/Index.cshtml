@model int
@{
    var statusCode = Model;
    var statusCodeName = "";
    var statusMessage = "";
    switch (statusCode)
    {
        case 403:
            statusCodeName = "Forbidden";
            statusMessage = "The request was a legal request, but the server is refusing to respond to it";
            break;
        case 404:
            statusCodeName = "Page not found";
            statusMessage = "You may have clicked an expired link or mistyped the address.";
            break;
        case 500:
            statusCodeName = "Internal Server Error";
            statusMessage = "A generic error message, given when no more specific message is suitable";
            break;
    }
}

<div class="container text-center">
    <div class="row">
        <div class="col-md-12 jumbotron">
            <h1>Error @statusCode - @statusCodeName</h1>
            <h3>@statusMessage</h3>
        </div>
    </div>
    <div class="row">
        <a href="javascript:history.back()" class="btn btn-info btn-toolbar btn-large"><i class="glyphicon glyphicon-chevron-left"></i> Back to Previous Page</a>&nbsp;
        <a href="/Home/Index" class="btn btn-info btn-toolbar btn-large"><i class="glyphicon glyphicon-th-large"></i>Return to Home Page</a>
    </div>
</div>